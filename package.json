{
  "name": "formularios-unificados",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "questionario-admin",
    "corporativo-proxy"
  ],
  "scripts": {
    "dev:admin": "npm run dev -w questionario-admin",
    "dev:proxy": "npm run dev -w corporativo-proxy",
    "dev": "npm run dev:admin & npm run dev:proxy",
    "build:admin": "npm run build -w questionario-admin",
    "build:proxy": "npm run build -w corporativo-proxy",
    "build": "npm run build:admin && npm run build:proxy",
    "lint": "npm run lint --workspaces --if-present",
    "db:generate": "npm run db:generate -w questionario-admin",
    "db:studio": "npm run db:studio -w questionario-admin",
    "docker:up": "docker compose -f docker/mysql-local/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/mysql-local/docker-compose.yml down",
    "docker:reset": "docker compose -f docker/mysql-local/docker-compose.yml down -v && docker compose -f docker/mysql-local/docker-compose.yml up -d",
    "docker:logs": "docker compose -f docker/mysql-local/docker-compose.yml logs -f mysql"
  },
  "devDependencies": {
    "typescript": "^5.4.0"
  }
}
