# .env.example
# Copie para .env.local e configure os valores

# ============================================================================
# DATABASE
# ============================================================================
QUESTIONARIOS_DATABASE_URL="mysql://usuario:senha@host:3306/questionario_sustentavel_dpj"

# ============================================================================
# AUTENTICAÇÃO
# ============================================================================
# URL do portal corporativo CNJ (para redirecionamento quando não autenticado)
NEXT_PUBLIC_CNJ_CORPORATIVO_URL="https://www.cnj.jus.br/corporativo"

# ============================================================================
# INTEGRAÇÃO CORPORATIVO
# ============================================================================
# Se definida, usa API REST. Se não definida, usa acesso direto ao banco.
# Quando o CNJ disponibilizar uma API, configure aqui.
# CORPORATIVO_API_URL="https://api.cnj.jus.br/corporativo/v1"

# ============================================================================
# APLICAÇÃO
# ============================================================================
# Nome da aplicação (exibido na interface)
NEXT_PUBLIC_APP_NAME="Administração de Questionários"

# URL base da aplicação (para callbacks)
NEXTAUTH_URL="https://seu-dominio.cnj.jus.br"

# ============================================================================
# DESENVOLVIMENTO
# ============================================================================
# Habilitar logs detalhados do Prisma
# DEBUG="prisma:query"
